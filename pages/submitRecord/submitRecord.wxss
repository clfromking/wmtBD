/* pages/submitRecord/submitRecord.wxss */
.jw-container{
  width: 690rpx;
  margin: 0 auto
}
.jw-form-item{
  display: flex;
  margin-top: 20rpx
}
.jw-formItem-title{
  width: 50%;
  font-size: 32rpx;
  color: #4F4F4F;
}
picker{
  width: 100%;
  font-size: 28rpx;
  color: #979797;
}
.jw-headImg-view{
  margin-top: 46rpx;
  font-size: 32rpx;
  color: #4F4F4F;
}
.jw-headScollView{
  height: 160rpx;
  white-space: nowrap;
  margin-top: 40rpx
}
.jw-headImg-item{
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #979797;
  box-sizing: border-box;
  border-radius: 10rpx;
  display: inline-block;
  margin-left: 38rpx
}
.jw-headImg{
  width: 100%;
  height: 100%;
  display: block
}
.jw-addHeadImg{
  height: 158rpx;
  width: 158rpx;
  box-sizing: border-box;
  border: 1rpx dashed #979797;
  display: inline-block;
  border-radius: 10rpx;
  margin-left: 38rpx;
  position: relative
}
.heng{
  width: 90rpx;
  height: 1rpx;
  background: #979797;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto
}
.shu{
  width: 1rpx;
  height: 90rpx;
  background: #979797;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto
}
.jw-againTime-view{
  margin-top: 62rpx
}