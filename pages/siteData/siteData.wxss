/* pages/siteData/siteData.wxss */
page{
  padding-bottom: 40rpx
}
.jw-container{
  width: 710rpx;
  margin: 0 auto
}
.jw-forms-item{
  margin-bottom: 60rpx
}
.jw-forms-item:nth-child(12) .jw-radios-input-view{
  position: relative;
  top: -74rpx;
  left: 344rpx;
  display: inline-block
}
.jw-forms-item-title{
  font-size: 28rpx;
  color: #4F4F4F;
  margin-bottom: 30rpx
}
.jw-radios-view{
  display: flex;
  flex-wrap: wrap;
}
.jw-radios-view view{
  width: 38%;
  /* height: 50rpx; */
  /* background: red; */
  min-height: 40rpx;
  line-height: 40rpx;
  margin-left: 36rpx;
  margin-bottom: 40rpx
}
.jw-radios-view view:nth-last-child(1),.jw-radios-view view:nth-last-child(2){
  margin-bottom: 0rpx
}
.jw-radio{
  display: inline-block;
  width: 26rpx;
  height: 26rpx;
  background: #F8F8F8;
  border: 1rpx solid #979797;
  border-radius: 50%;
  position: relative;
  vertical-align: top;
  margin-right: 20rpx;
  margin-top: 6rpx
  
}
.jw-radio-text{
  display: inline-block;
  font-size: 24rpx;
  color: #7F7C7C; 
  vertical-align: text-top;
  width: 200rpx
}
.jw-radios-input-view{
  margin-top: 20rpx
}
.jw-radios-input{
  width: 356rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #6E6C6C;
  background: #F8F8F8;
  border: 1rpx solid #C2C2C2;
  margin-right: 22rpx;
  padding: 0 6rpx;
  box-sizing: border-box
}
.jw-coordinates{
  font-size:24rpx;
  color:#7F7C7C;
  margin-left: 146rpx
}
.jw-submit-btn{
  width: 587rpx;
  height: 85rpx;
  border: 1rpx solid #AAAAAA;
  border-radius: 17rpx;
  line-height: 85rpx;
  text-align: center;
  font-size: 36rpx;
  color: #262626;
  margin: 116rpx auto 0
}





.jw-formItem{
  height: 60rpx;
  display: flex;
  margin: 20rpx auto
  /* background: red */
}
.jw-formItem-title{
  display: inline-block;
  font-size: 28rpx;
  color: #4F4F4F;
  height: 60rpx;
  line-height: 60rpx;
  width: 264rpx;
  min-width: 264rpx
}
.jw-formItem-input,picker{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #AEAEAE;
  display: block;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
picker{
  width: 100%;

}
.jw-chooseImgView{
  width: 558rpx;
  height: 242rpx;
  background: #E8E8E8;
}

.jw-chooseImgView-text{
  line-height: 242rpx;
  text-align: center;
  font-size: 24rpx;
  color: #696868;
  display: inline-block;
  width: 100%
}
.jw-license{
  width: 100%;
  height: 100%;
  display: block
}
textarea{
  background: #FEFEFE;
  border: 1rpx solid #D9D8D8;
  width: 558rpx;
  height: 242rpx;
  font-size: 24rpx;
  color: #4F4F4F;
  /* line-height: 24rpx; */
  padding: 6rpx;
  box-sizing: border-box
}

.jw-submitBtn{
  width: 587rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  color: #262626;
  font-size: 36rpx;
  margin: 128rpx auto 0;
  border: 1rpx solid #AAAAAA;
  border-radius: 17rpx;
}











.isChecked{
  width: 55%;
  height: 55%;
  background: #3A4BF9;
  border-radius: 50%;
  display: inline-block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto
}



.jw-nothing{
  text-align: center;
  font-size: 32rpx;
  color: #4F4F4F;
  padding-top: 220rpx
}

.jw-shade{
  width: 100vw;
  height: 100vh;
  background: #fff;
  position: fixed;
  top: 0;
  right: 0;
  z-index: 10
}